{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "airbnb",
    "rules": {
        "semi": [2],
        "arrow-parens": [0],
        "indent": ["error", 4],
        "global-require": [0],
        "react/jsx-filename-extension": [0],
        "react/jsx-indent": ["error", 4],
        "react/destructuring-assignment": [0],
        "no-unused-vars": [1],
        "react/require-default-props": [0]
    }
}
